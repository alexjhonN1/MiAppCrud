<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiAppCrud.Views.ProveedorEditPage"
             Title="Agregar/Editar Proveedor">

    <StackLayout Padding="10">
        <!-- Etiqueta de nombre -->
        <Label Text="Nombre" FontSize="Medium" TextColor="DarkBlue"/>
        <Entry Text="{Binding Nombre}" Placeholder="Nombre del proveedor" />

        <!-- Etiqueta de teléfono -->
        <Label Text="Teléfono" FontSize="Medium" TextColor="DarkBlue" Margin="0,10,0,0"/>
        <Entry Text="{Binding Telefono}" Placeholder="Teléfono del proveedor" Keyboard="Telephone"/>

        <!-- Botón Guardar -->
        <Button Text="Guardar" Margin="0,20,0,0" 
                BackgroundColor="Green" TextColor="White" 
                Clicked="OnSaveClicked" />

        <!-- Botón Actualizar -->
        <Button Text="Actualizar" Margin="0,10,0,0" 
                BackgroundColor="Orange" TextColor="White" 
                Clicked="OnUpdateClicked" />
    </StackLayout>
</ContentPage>
