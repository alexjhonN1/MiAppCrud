<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiAppCrud.Views.CategoriaEditPage">
    <StackLayout Padding="10">

        <!-- Etiqueta de nombre -->
        <Label Text="Nombre de la Categoría" FontSize="Medium" TextColor="DarkBlue"/>
        <Entry x:Name="NombreEntry"/>

        <!-- Etiqueta de descripción -->
        <Label Text="Descripción" FontSize="Medium" TextColor="DarkBlue" Margin="0,10,0,0"/>
        <Entry x:Name="DescripcionEntry"/>

        <!-- Botón Guardar -->
        <Button Text="Guardar" BackgroundColor="Green" TextColor="White" Margin="0,20,0,0" Clicked="OnSaveClicked"/>

        <!-- Botón Actualizar -->
        <Button Text="Actualizar" BackgroundColor="Orange" TextColor="White" Margin="0,10,0,0" Clicked="OnUpdateClicked"/>

        <!-- Botón Eliminar -->
        <Button Text="Eliminar" BackgroundColor="Red" TextColor="White" Margin="0,10,0,0" Clicked="OnDeleteClicked"/>

    </StackLayout>
</ContentPage>
